<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.adam4.cristian.inferenceengine.MainActivity">


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/User"
            android:spinnerMode="dialog"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_row="0"
            android:layout_column="0"
            android:minHeight="@dimen/abc_action_bar_progress_bar_size" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Distraction"
            android:spinnerMode="dialog"
            android:layout_below="@+id/Param1"
            android:layout_alignParentRight="true"
            android:layout_row="2"
            android:layout_column="0"
            android:minHeight="@dimen/abc_action_bar_progress_bar_size" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Session"
            android:spinnerMode="dialog"
            android:layout_below="@+id/Distraction"
            android:layout_alignParentRight="true"
            android:layout_row="1"
            android:layout_column="0"
            android:minHeight="@dimen/abc_action_bar_progress_bar_size" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Param1"
            android:spinnerMode="dialog"
            android:layout_below="@+id/Param2"
            android:layout_alignParentRight="true"
            android:layout_row="3"
            android:layout_column="0"
            android:minHeight="@dimen/abc_action_bar_progress_bar_size" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Param2"
            android:spinnerMode="dialog"
            android:layout_below="@+id/User"
            android:layout_alignParentRight="true"
            android:layout_row="4"
            android:layout_column="0"
            android:minHeight="@dimen/abc_action_bar_progress_bar_size" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Param3"
            android:spinnerMode="dialog"
            android:layout_below="@+id/Session"
            android:layout_centerHorizontal="true"
            android:layout_row="5"
            android:layout_column="0"
            android:minHeight="@dimen/abc_action_bar_progress_bar_size" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit Query"
            android:id="@+id/button"
            android:layout_below="@+id/Session"
            android:layout_centerHorizontal="true"
            android:layout_row="6"
            android:layout_column="0"
            android:layout_gravity="center_horizontal" />

    </GridLayout>
</RelativeLayout>
